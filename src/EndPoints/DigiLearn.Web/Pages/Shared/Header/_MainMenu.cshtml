@using CoreModule.Query.Category._DTOs
@model List<CourseCategoryDto>
<div class="last-header container-fluid">
    <ul class="main-menu">
        @foreach (var item in Model)
        {
            var hasChild = item.Children.Any();

            <li class="menu">
                <a href="/courses?category=@item.Slug">
                    @item.Title
                    @if (hasChild)
                    {
                        <i class="zmdi zmdi-chevron-down"></i>
                    }
                </a>
                @if (hasChild)
                {
                    @foreach (var child in item.Children)
                    {
                        <ul class="category">
                            <li>
                                <a href="/categories?category=@item.Slug">@child.Title</a>
                            </li>
                        </ul>
                    }
                }            
            </li>
        }
    </ul>
</div>