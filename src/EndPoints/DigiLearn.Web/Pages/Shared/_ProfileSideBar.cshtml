@using DigiLearn.Web.Infrastructure
@using UserModule.Core
@using UserModule.Core.Services
@inject IUserFacade _userFacade
@{
    var user = await _userFacade.GetUserByPhoneNumber(User.GetPhoneNumber());
}

<div class="col-12 col-xl-3 col-lg-3 col-md-4">
    <div class="profile-menu shadow-lg">
        <div class="avatar">
            <a href="#" title="خروج" data-toggle="tooltip" data-placement="top" class="sign-out">
                <i class="zmdi zmdi-power text-danger"></i>
            </a>
            <div class="image">
                <form>
                    <a href="javascript:void(0)" title="تغییر آواتار" data-toggle="tooltip">
                        <input type="file" id="upImgAvatar" name="avatar" class="ProfileAvatarInput">
                        <i class="zmdi zmdi-edit"></i>
                    </a>
                    <img src="@UserModuleDirectories.GetUserAvatar(user!.Avatar)" alt="">

                </form>
            </div>
            <p>@user.Name @user.Family</p>
        </div>
        <div class="showMenu">
            <a href="javascript:void(0)">
                نمایش منو
            </a>
            <i class="fa fa-chevron-down pull-left"></i>

        </div>
        <ul>
            <li>
                <a href="/" class="selected">
                    <i class="zmdi zmdi-view-dashboard"></i>
                    داشبورد

                </a>
            </li>
            <li>
                <a href="/profile/edit">
                    <i class="fa fa-user-edit"></i>

                    ویرایش حساب کاربری
                </a>
            </li>
            <li>
                <a href="/profile/changePassword">
                    <i class="fa fa-edit"></i>

                    ویرایش رمز عبور
                </a>
            </li>
            <li>
                <a href="/profile/ticket">
                    <i class="fa fa-paper-plane"></i>
                    تیکت ها
                </a>
            </li>
            <li>
                <a href="/profile/orders">
                    <i class="zmdi zmdi-gradient"></i>
                    فاکتور ها
                </a>
            </li>
            <li>
                <a href="/profile/courses">
                    <i class="fa fa-graduation-cap"></i>
                    دوره های من
                </a>
            </li>
            <li>
                <a href="/profile/comments">
                    <i class="fa fa-comments-o"></i>
                    نظرات
                </a>
            </li>
            <li>
                <a href="/profile/notification">
                    <i class="zmdi zmdi-notifications"></i>

                    پیغام ها
                </a>
            </li>
            <li>
                <a href="/auth/logout">
                    <i class="fa fa-sign-out"></i>
                    خروج

                </a>
            </li>
        </ul>
    </div>

</div>