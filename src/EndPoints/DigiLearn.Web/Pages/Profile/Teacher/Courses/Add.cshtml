@page
@using CoreModue.Facade.Category
@using CoreModule.Domain.Course.Enums
@model DigiLearn.Web.Pages.Profile.Teacher.Courses.AddModel
@inject ICourseCategoryFacade _categoryFacade
@{
    ViewData["Title"] = "افزودن دوره";
    Layout = "Shared/_ProfileLayout";
    var categories = await _categoryFacade.GetAll();
}
<div class="row ">
    <div class="col-12 info shadow pl-0 pr-0">
        <p class="title">
            <i class="fa fa-paper-plane"></i>
            @ViewData["Title"]
        </p>
        <form method="post" enctype="multipart/form-data" class="row">
            <div class="col-md-6">
                @Html.EditorFor(x => x.Title)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(x => x.Slug)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(x => x.Price)
            </div>
            <div class="col-md-6">
                 <label asp-for="CourseLevel"></label>
                 <select asp-for="CourseLevel" class="form-control">
                     <option value="@CourseLevel.Beginner">مقدماتی</option>
                     <option value="@CourseLevel.Intermediate">از مقدماتی تا پیشرفته</option>
                     <option value="@CourseLevel.Expert">پیشرفته</option>
                 </select>
            </div>
            <div class="col-md-6">
                 <label asp-for="CategoryId"></label>
                 <select asp-for="CategoryId" class="form-control">
                        <option>انتخاب کنید</option>
                    @foreach (var item in categories)
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="SubCategoryId"></label>
                <select asp-for="SubCategoryId" class="form-control">
                </select>
            </div>
            <div class="col-md-12">
                @Html.EditorFor(x => x.Description)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(x => x.ImageFile)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(x => x.VideoFileName)
            </div>
            <div class="col-12">
                <button class="btn  btn-save  mt-3">افزودن دوره</button>

            </div>
        </form>

    </div>
</div>
@section Scripts
{
    <script>
        $("#CategoryId").change(function () {
            var id = $(this).val();
            $.ajax({
                url: "/ajax/getCategoryChildren?id=" + id,
                method: "get"
            }).done(function (data) {
                $("#SubCategoryId").html(data);
            });
        });
    </script>
}

