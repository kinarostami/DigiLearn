@page
@model DigiLearn.Web.Pages.Profile.ChangePasswordModel
@{
    ViewData["title"] = "ویرایش رمز عبور";
}
@section meta {
    <link rel="stylesheet" href="/css/profile.min.css" />
}
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 breadcrumb">
                <ul class="">
                    <li>
                        <a href="/">
                            خانه
                            <i class="fa fa-chevron-left"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-page="profile/index">
                            پنل کاربری
                        </a>
                    </li>
                    <li>
                        <a asp-page="profile/edit">
                            ویرایش حساب
                        </a>
                    </li>
                    <li>
                        <a asp-page="profile/changePassword">
                            ویرایش رمز عبور
                        </a>
                    </li>
                </ul>

            </div>
            <partial name="Shared/_ProfileSideBar" />
            <div class="col-12 col-xl-9 col-lg-9 col-md-8 profile-body">
                <div class="row ">
                    <div class="col-12 info shadow pl-0 pr-0">
                        <p class="title">
                            <i class="fa fa-address-card-o"></i>
                            @ViewData["title"]
                        </p>
                        <div class="info-body p-2">
                            <form method="post" class="row">
                                <div class="col-12">
                                    @Html.EditorFor(x => x.CurrentPassword)
                                </div>
                                <div class="col-12 col-lg-6 col-md-6 mb-3">
                                    @Html.EditorFor(x => x.NewPassword)
                                </div>
                                <div class="col-12 col-lg-6 col-md-6 mb-3">
                                    @Html.EditorFor(x => x.ConfirmNewPassword)
                                </div>
                                <div class="col-12">
                                    <button class="btn  btn-save  mt-3">ویرایش رمز عبور</button>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
