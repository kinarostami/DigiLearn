@page
@using DigiLearn.Web.Infrastructure.Utils
@using TIcketModules.Data.Entities
@model DigiLearn.Web.Pages.Profile.Ticket.IndexModel
@section meta {
    <link rel="stylesheet" href="/css/profile.min.css" />
}
@{
    var cuntter = 1;
}
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 breadcrumb">
                <ul class="">
                    <li>
                        <a href="/">
                            خانه
                            <i class="fa fa-chevron-left"></i>
                        </a>
                    </li>
                    <li>
                        <a asp-page="profile/index">
                            پنل کاربری
                        </a>
                    </li>
                    <li>
                        <a asp-page="profile/ticket/index">
                            تیکت ها
                        </a>
                    </li>
                </ul>

            </div>
            <partial name="Shared/_ProfileSideBar" />
<div class="col-12 col-xl-9 col-lg-9 col-md-8 profile-body">
    <div class="row ">
        <div class="col-12 info shadow pl-0 pr-0">
            <p class="title">
                <i class="fa fa-paper-plane"></i>
                تیکت ها
            </p>

            <br>
            <a asp-page="Add" class="btn btn-save mr-2 mb-4 float-right">ثبت تیکت جدید</a>
            <div class="info-body p-2">
                <div class="table-responsive">
                    <h5>
                        <i class="fa fa-list"></i>
                        لیست تیکت ها
                    </h5>
                    <table class="table   table-hover  table-striped text-center">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <td>وضعیت</td>
                                <th>تاریخ ثبت</th>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.FilterReulst.Data)
                                        {
                                            <tr>
                                                <td>@cuntter</td>
                                                <td>@item.Title</td>

                                                <td>
                                                    @switch (item.TicketStatus)
                                                    {
                                                        case TicketStatus.Pending:
                                                            <span class="badge badge-info">درحال بررسی</span>
                                                            break;
                                                        case TicketStatus.Answered:
                                                            <span class="badge badge-success">پاسخ داده شد</span>
                                                            break;
                                                        case TicketStatus.Closed:
                                                            <span class="badge badge-danger">بسته شد</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    @item.CreationDate.ToPersianDate()
                                                </td>
                                                <td>
                                                    <a asp-page="Show" asp-route-id="@item.Id" class="btn btn-sm btn-primary">نمایش</a>
                                                </td>
                                            </tr>
                                            cuntter += 1;
                                        }
                                        @if (Model.FilterReulst.EntityCount == 0)
                                        {
                                            <tr>
                                                <td colspan="5">موردی برای نمایش وجود ندارد</td>
                                            </tr>
                                        }
                        </tbody>
                    </table>
                </div>
                <hr class="mt-0">
                <div class="paginat col-12">
                    <a href="#" class="first">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a class="current-page">4</a>
                    <a href="#">5</a>

                    <a href="#" class="last">22</a>
                </div>
            </div>
        </div>

    </div>
</div>

    </div>
</div>
</main>
