@page "{handler?}"
@using DigiLearn.Web.Infrastructure.Utils
@model DigiLearn.Web.Pages.Profile.NotificationsModel
@{
    ViewData["title"] = "پیغام ها";
    Layout = "Shared/_ProfileLayout";
}
                    <div class="row ">
                        <div class=" info shadow pl-0 pr-0">
                            <p class="title">
                                <i class="zmdi zmdi-notifications text-warning"></i>
                                @ViewData["title"]
                                <delete-item is-button-tag="false" class="pull-left" title="حذف همه" 
                                url="@Url.Page("Notifications", "DeleteAll")  data-toggle=" tooltip"">
                                    <i class="fa fa-trash-o text-danger" style="font-size: 25px;"></i>
                                </delete-item>
                            </p>

                            <div class="info-body ">
                                <div class="table-responsive">
                                    <table class="table text-center  table-hover  table-striped text-center">
                                        <thead>
                                            <tr>
                                                <th>متن</th>
                                                <th>وضعیت</th>
                                                <th>تاریخ</th>
                                                <td>
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.FilterResult.Data)
                                            {
                                                <tr>
                                                    <td>
                                                        <p><b>@item.Title</b></p>
                                                        <div>
                                                            @Html.Raw(item.Text)
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @if (item.IsSeen)
                                                        {
                                                            <span class="badge badge-success">مشاهده شده</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">جدید</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @item.CreationDate.ToPersianDateTime()
                                                    </td>
                                                    <td>
                                                        @if (item.IsSeen == false)
                                                        {
                                                            <form method="post" asp-page-handler="SeenNotification" class="d-inline-block">
                                                                <input type="hidden" name="notificationId" value="@item.Id" />
                                                                <button class="btn btn-success btn-sm" title="این پیام را خواندم" data-toggle="tooltip" onclick="return confirm('آیا از انجام عملیات اطمینان دارید؟')">
                                                                    <i class="fa fa-check text-white"></i>
                                                                </button>
                                                            </form>
                                                        }
                                                        <delete-item title="حذف" data-toggle="tooltip" class="btn btn-sm btn-danger"
                                                                     url="@Url.Page("Notifications", "DeleteNotification", new { notificationId = item.Id })">
                                                            <i class="fa fa-trash"></i>
                                                        </delete-item>
                                                    </td>
                                                </tr>
                                            }
                                            @if(Model.FilterResult.EntityCount == 0)
                                            {
                                                <tr>
                                                    <td colspan="4" class="fa fa-info text-info"></td>
                                                    موردی برای نمایش وجود ندارد
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <partial name="Shared/_Pagination" model="Model.FilterResult" />
                            </div>
                        </div>


                    </div>