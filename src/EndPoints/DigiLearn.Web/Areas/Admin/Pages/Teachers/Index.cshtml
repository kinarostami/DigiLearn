@page
@using CoreModule.Domain.Teacher.Enums
@model DigiLearn.Web.Areas.Admin.Pages.Teachers.IndexModel
@{
    ViewData["title"] = "مدیریت مدرسین";
    ViewData["selected"] = "teachers";
}
 <h3>@ViewData["title"]</h3>
 <a asp-page="Add" class="btn btn-success mb-2">افزودن مورد جدید</a>
 <div class="table-responsive card-body p-0">
     <table class="table table-bordered table-hover data-table">
         <thead>
             <tr>
                 <th>نام کاربری</th>
                 <th>نام و نام خانوادگی</th>
                 <th>شماره همراه</th>
                 <th>وضعیت</th>
                 <th>عملیات</th>
             </tr>
         </thead>
         <tbody>
             @foreach (var item in Model.Teachers)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.User.Name @item.User.Family</td>
                    <td>@item.User.PhoneNumber</td>
                    <td>
                        @switch (item.Status)
                        {
                            case TeacherStatus.Active:
                            <label class="badge bg-success">فعال</label>
                                break;
                            case TeacherStatus.Inactive:
                                <label class="badge bg-danger">غیر فعال</label>
                                break;
                            case TeacherStatus.Pending:
                                <label class="badge bg-info">در حال بررسی</label>
                                break;
                        }
                    </td>
                    <td>
                        @if (item.Status == TeacherStatus.Active)
                        {
                            <Question>غیر فعال سازی</Question> 
                        }
                        else if (item.Status == TeacherStatus.Inactive)
                        {
                            <Question>فعال سازی</Question>
                        }
                        <a class="btn btn-primary" asp-page="Show" asp-route-teacherId="@item.Id">نمایش</a>
                    </td>
                </tr>
            }
         </tbody>
     </table>
 </div>